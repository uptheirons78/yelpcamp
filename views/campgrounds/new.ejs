<% include ../partials/header %>

<div class="container">
    <div class="row text-center">
        <h1>Add a New CampGround</h1>
        
        <div class="my_form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="CampGround Name">    
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="CampGround Price" min="0.01" step="0.01">    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="CampGround Image Url">    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="CampGround Description">    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>         
        </div>


        
        <a href="/campgrounds">Back</a>
    </div>
</div>

<% include ../partials/footer %>